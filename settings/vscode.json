{
  "editor.fontFamily": "'Operator Mono Lig','Fira Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontWeight": 600,
    // "editor.lineHeight": 1.5,
    "editor.fontLigatures": true,
    "files.autoSave": "afterDelay",
    "workbench.colorTheme": "Operator Mono Dark Theme",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight":"bold",
    "emmet.triggerExpansionOnTab": true,
    "blade.format.enable": true,
    "[blade]": {
        "editor.autoClosingBrackets": "always"
    },
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
      {
        "before": ["j", "j"],
        "after": ["<Esc>"]
      }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["<leader>", "d"],
        "after": ["d", "d"]
      },
      {
        "before": ["<C-n>"],
        "commands": [":nohl"]
      }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
      // "<C-a>": false,
      // "<C-f>": false,
      // "<C-c>": false,
      // "<C-x>": false,
      // "<C-v>": false,
      "<C-y>": false,
      // "<C-d>": false,
      // "<C-k>": false,
      // "<C-s>": false,
      "<C-t>": false,
      "<C-r>": false,
    },
    "[php]": {
      "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "explorer.confirmDelete": false,
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": false,
    "editor.cursorWidth": 3,
    // "editor.lineNumbers": "relative",
    "phpParameterHint.collapseHintsWhenEqual": true,
    "security.workspace.trust.untrustedFiles": "newWindow",
    "intelephense.environment.phpVersion": "8.1.0",
    "better-phpunit.docker.enable": true,
    "better-phpunit.docker.command": "docker-compose run --rm app",
    "better-phpunit.docker.paths": {
        // "/opt/lampp/htdocs/backend": "/usr/src/app"
        "/opt/lampp/htdocs/zebel": "/usr/src/app"
    },
    "diffEditor.maxComputationTime": 0,
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
      "*": true,
      "yaml": false,
      "plaintext": false,
      "markdown": false,
      "php": false,
      "go": false,
      "json": false,
      "dotenv": false,
      "html": false,
      "twig": false,
      "java": false
    },
    "cSpell.userWords": [
      "jsonify"
    ],
    "editor.fontSize": 13,
    "[java]": {
      "editor.defaultFormatter": "redhat.java"
    },
    "[json]": {
      "editor.defaultFormatter": "SimonSiefke.prettier-vscode"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "window.zoomLevel": 1
}